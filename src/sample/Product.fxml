<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="800.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.ProductController">
    <children>
        <TableView fx:id="prodTable" layoutX="19.0" layoutY="348.0" onMouseClicked="#getVal" prefHeight="230.0"
                   prefWidth="762.0"/>
        <Label alignment="CENTER" layoutX="285.0" layoutY="14.0" prefHeight="70.0" prefWidth="230.0" text="Product"
               textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="38.0"/>
            </font>
        </Label>
        <Label alignment="CENTER" layoutX="35.0" layoutY="97.0" text="Product">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="prodField" layoutX="113.0" layoutY="94.0" prefHeight="26.0" prefWidth="200.0"
                   promptText="Less Than 15 Character"/>
        <Button fx:id="addButton" layoutX="367.0" layoutY="300.0" mnemonicParsing="false" onAction="#addButton"
                prefHeight="26.0" prefWidth="70.0" text="Add"/>
        <Button fx:id="delButton" layoutX="463.0" layoutY="300.0" mnemonicParsing="false" onAction="#deleteProduct"
                prefHeight="26.0" prefWidth="70.0" text="Delete"/>
        <TextField fx:id="priceField" layoutX="518.0" layoutY="94.0" prefHeight="26.0" prefWidth="200.0"
                   promptText="Input Retail Price"/>
        <Label alignment="CENTER" layoutX="35.0" layoutY="167.0" text="Description">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <TextArea fx:id="descArea" layoutX="113.0" layoutY="134.0" prefHeight="85.0" prefWidth="200.0"
                  promptText="Description (Max 255 Char)"/>
        <Label layoutX="438.0" layoutY="242.0" text="Category"/>
        <ComboBox fx:id="catCombo" layoutX="515.0" layoutY="238.0" onMouseClicked="#catCombo" prefHeight="26.0"
                  prefWidth="200.0" promptText="Select Category"/>
        <Label layoutX="35.0" layoutY="242.0" text="Brand"/>
        <ComboBox fx:id="brandCombo" layoutX="112.0" layoutY="238.0" onMouseClicked="#brandCombo" prefHeight="26.0"
                  prefWidth="200.0" promptText="Select Brand"/>
        <Label layoutX="437.0" layoutY="98.0" text="Retail Price"/>
        <TextField fx:id="qtyField" layoutX="518.0" layoutY="139.0" prefHeight="26.0" prefWidth="200.0"
                   promptText="Input Quantity"/>
        <Label layoutX="437.0" layoutY="144.0" text="Quantity"/>
        <TextField fx:id="barcodeField" layoutX="515.0" layoutY="188.0" prefHeight="26.0" prefWidth="200.0"
                   promptText="Input 4 Digits Barcode"/>
        <Label layoutX="437.0" layoutY="193.0" text="Barcode"/>
        <Button fx:id="editButton" layoutX="267.0" layoutY="300.0" mnemonicParsing="false" onAction="#editButton"
                prefHeight="26.0" prefWidth="70.0" text="Edit"/>
        <Button fx:id="refreshButton" layoutX="718.0" layoutY="22.0" mnemonicParsing="false" onAction="#refreshButton"
                prefHeight="26.0" prefWidth="58.0" text="Refresh"/>
    </children>
</AnchorPane>
